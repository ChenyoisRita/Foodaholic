<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/total_header"
        android:layout_width="361dp"
        android:layout_height="56dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:gravity="center"
        android:text="Are you sure you want to split the bill?"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageView14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.961"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.366"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/submit_btn"
        style="BigButton"
        android:layout_width="108dp"
        android:layout_height="56dp"
        android:layout_below="@id/total_edit"
        android:layout_alignBottom="@+id/total_edit"
        android:layout_marginEnd="152dp"
        android:layout_marginBottom="140dp"
        android:layout_toStartOf="@+id/total_edit"
        android:text="SPLIT"
        android:textSize="20dp"
        android:background="@drawable/btn_click_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="UnknownId" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="252dp"
        android:layout_height="259dp"
        android:layout_above="@+id/submit_btn"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="280dp"
        android:src="@drawable/bill"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>